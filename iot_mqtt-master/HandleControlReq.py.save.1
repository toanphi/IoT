#   prop2 is mapping property of prop1 in dictionary
#   flag is used for exact searching
def getLstPropFromDict(prop1, prop2, dictionary, flag):
    items = []
    for item in dictionary:
        if (prop1 in item[prop2]):
            if (flag == 1):
                return item
            items.append(item)
